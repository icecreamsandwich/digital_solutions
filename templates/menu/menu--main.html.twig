{# Get menu items #}
{% set items = simplify_menu('main') %}
<header id="header" class="fixed-top header-scrolled">

    <div class="container d-flex align-items-center justify-content-lg-between">
        <h1 class="logo me-auto me-lg-0"><a href="#">Gp<span>.</span></a></h1>
        <!-- .navbar -->
        {# Iterate menu tree #}
        <nav id="navbar" class="navbar order-last order-lg-0">
            <ul>
                {% for menu_item in items.menu_tree %}
                    {% if menu_item.submenu %}
                    <li class="navigation__item dropdown">
                        <a href="#" class="nav-link scrollto">
                            <span>{{ menu_item.text }}</span> <i class="bi bi-chevron-down"></i>
                        </a>
                        <ul>
                            {% for item in menu_item.submenu %}
                            <li class="navigation__item">
                                <a href="{{ item.url }}" class="nav-link scrollto">{{ item.text }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                    </li>
                    {% else %}
                    <li class="navigation__item">
                        <a href="{{ menu_item.url }}" class="nav-link scrollto">{{ menu_item.text }}</a>
                    </li>
                    {% endif %}    
                {% endfor %}
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav>
        <!-- .navbar -->

        <a href="#about" class="get-started-btn scrollto">Get Started</a>
    </div>
</header>